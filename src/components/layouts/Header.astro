---
import i18next, { t } from "i18next";
import { localizePath } from "astro-i18next";
import { LanguageSelector } from "astro-i18next/components";
import Logo from "atoms:Logo";
import MapleLeaf from "@/MapleLeaf.astro";
import QuizButton from "atoms:QuizButton";

const navItems = [
	{ url: '/wordpress-services', label: t('navigation.services') },
	{ url: '/about', label: t('navigation.about') },
]
---
<header class="wrapper pt-12 pb-2 flex flex-wrap items-center">
	<h1 class="md:mr-12">
		<a href="/" title={t('navigation.home')} class="block w-36">
			<Logo />
		</a>
	</h1>
	<nav class="order-last md:order-2 w-full md:w-auto bg-gradient-to-r from-brand to-brand-skyblue flex items-center py-1 mt-4 md:bg-none font-heading font-medium uppercase text-brand-dark text-xs md:text-base">
		<ul class="flex space-x-6 items-center justify-center bg-white w-full h-full md:bg-transparent">
		{navItems.map(i => 
			<li>
				<a class="block" href={localizePath(i.url, i18next.language)}>{i.label}</a>
			</li>
		)}
			<li>
				<QuizButton>{t('navigation.audit')}</QuizButton>
			</li>
		</ul>
	</nav>
	<div class="flex justify-end ml-auto md:order-last">
		<MapleLeaf/>
		<LanguageSelector showFlag={false} class="p-0 pr-8 border-none ml-4 focus:outline-none "/>
		<div>
			<a class="inline-block bg-red-500 text-white px-4 py-2 rounded-full" href="/contact">Contact</a>	
		</div>
	</div>
</header>
