---
import { LanguageSelector } from "astro-i18next/components";
import Logo from "./Logo.astro";
import MapleLeaf from "./MapleLeaf.astro";
import QuizButton from "./QuizButton.astro";

const navItems = [
	{ url: '/wordpress-services', label: 'WordPress Services' },
	{ url: '/about', label: 'About' },
]
---
<header class="wrapper py-12 flex flex-wrap items-center">
	<h1 class="md:mr-6">
		<a href="/" title="Motto Home" class="block w-36">
			<Logo />
		</a>
	</h1>
	<nav class="order-last md:order-2 w-full md:w-auto bg-gradient-to-r from-brand to-brand-skyblue flex items-center py-1 mt-4 md:bg-none font-heading font-medium uppercase">
		<ul class="flex space-x-6 items-center justify-center bg-white w-full h-full md:bg-transparent">
		{navItems.map(i => 
			<li>
				<a class="block" href={i.url}>{i.label}</a>
			</li>
		)}
			<li>
				<QuizButton>Free Audit</QuizButton>
			</li>
		</ul>
	</nav>
	<div class="flex space-x-4 justify-end ml-auto md:order-last">
		<div class="flex items-center space-x-2">
			<MapleLeaf/>
			<!-- <LanguageSelector showFlag={false} class="font-mono overflow-hidden whitespace-nowrap w-[4ch] md:w-auto md:font-sans"/> -->
		</div>
		<div>
			<a class="inline-block bg-red-500 text-white px-4 py-2 rounded-full" href="/contact">Contact</a>	
		</div>
	</div>
</header>
