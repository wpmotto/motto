---
import Plain from '@layouts/Plain.astro';
import Services from 'molecules:Services';
import Audit from 'molecules:Audit';
import Stats from 'molecules:Stats';
import Trust from 'molecules:Trust';
import PageHeader from "layouts:PageHeader";
import i18next from "i18next";
i18next.changeLanguage("en");
---
<Plain title="Homepage" description="Homepage">
	<main>
		<PageHeader>
			<h1 class="title">Your WordPress Guardians</h1>
			<p class="font-heading text-lg font-light">Never worry about your WordPress site again.
				We'll be your dedicated WordPress web master.</p>
			<a href="/wordpress-services/maintenance" class="inline-block rounded-full px-6 py-3 border-4 border-brand-midblue text-brand-midblue font-semibold uppercase tracking-wide font-heading bg-brand-midblue/10 hover:bg-brand-midblue hover:text-white transition-colors">
				WordPress Maintenance
			</a>
			<lottie-player slot="graphic" src="/motto-lottie.json" background="transparent" speed="0.8" loop="" autoplay=""></lottie-player>
		</PageHeader>

		<div class="wrapper pt-48 md:pt-32 py-32 relative">
			<div class="text-center max-w-full mx-auto w-[60ch] font-heading font-light">
				<p class="text-lg">Motto is a Canadian <strong class="text-brand">WordPress agency</strong> specializing in all things WordPress. We are a small but mighty team based in Canada’s tech and art capital, Montreal.</p>
			</div>

			<div class="animate-spin inline-flex justify-center items-center rounded-full bg-gradient-to-b from-brand to-brand-skyblue w-40 h-40 -z-1 absolute top-0 right-0 opacity-25 lg:opacity-100">
			<span class="bg-white w-20 h-20 rounded-full"></span>
			</div>
			<div class="rounded-full h-10 w-10 -z-1 absolute top-24 right-48 bg-brand-dark opacity-25 lg:opacity-100">
			</div>
			<div class="rounded-full h-40 w-40 -z-1 absolute bottom-0 left-0 bg-brand-mint opacity-25 lg:opacity-100">
			</div>
			<div class="animate-spin inline-flex justify-center items-center rounded-full bg-gradient-to-b from-brand to-brand-skyblue w-20 h-20 -z-1 absolute mr-2 bottom-24 -left-12 opacity-25 lg:opacity-100">
			<span class="bg-white w-10 h-10 rounded-full"></span>
			</div>
		</div>		
		<div class="mx-auto max-w-screen-lg px-8 grid grid-cols-1 md:grid-cols-2 gap-12 pb-20 md:gap-20 md:py-20">
			<div class="prose prose-headings:font-heading prose-a:no-underline">
				<h2 class="text-slate-dark">Ready to upgrade to a <strong>WordPress&nbsp;Agency</strong>?</h2>
	
				<p>Stop waiting for freelancers that are never there when you need them and hearing bad advice from false WordPress experts.</p>
				
				<p><a href="/contact" class="text-brand-action font-extrabold inline-block px-2 py-1 text-sm border-2 hover:bg-brand-action/20 transition border-brand-action rounded">Contact us</a> and we’ll get back to you asap.</p>
			</div>
			<a href="/about" class="block group">
				<img src="/wordpress-agency.webp" alt="Canadian WordPress Agency Team Members" class="block rounded-xl shadow-xl group-hover:scale-110 -rotate-6 transition" />
				<p class="mt-4 text-sm text-brand-midblue group-hover:underline text-right">About our WordPress Agency ➝</p>
			</a>
		</div>
		<div class="wrapper">
			<Services/>
		</div>
		<Trust />
		<Stats/>
		<Audit/>
	</main>
</Plain>

<script>import "@lottiefiles/lottie-player";</script>